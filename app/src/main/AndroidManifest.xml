<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_spaceapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_spaceapp"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpaceApp"
        tools:targetApi="31">
        <activity
            android:name="com.ayush.spacequiz.Login"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.SignUp"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.Landing"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.ResultsActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.BaseFunctionality"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.AstronautsActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.SolarSystemActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.SpaceExplorationActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.SpaceMissionsActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.ayush.spacequiz.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
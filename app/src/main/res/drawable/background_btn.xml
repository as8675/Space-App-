<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- For selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Selected solid color -->
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#2E7D32"/> <!-- Darker stroke for selected state -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
    <!-- For default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Default solid color -->
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#E1A500"/> <!-- Default stroke color -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
